<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.example.shefaaproject.Activities.BookActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"

        >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/shefaa"
        android:layout_marginBottom="20dp"

        />
    <Button
        android:id="@+id/book_specialist_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="البحث حسب التخصص            "
        android:textSize="20sp"
        android:background="@drawable/mybutton"
        />
        <Button
            android:id="@+id/book_area_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="البحث حسب المنطقة                "
            android:textSize="20sp"
            android:background="@drawable/mybutton"
            />
    <Button
        android:id="@+id/book_name_of_doctor_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="ابحث باسم الدكتور                     "
        android:textSize="20sp"
        android:background="@drawable/mybutton"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        />
    </LinearLayout>

</LinearLayout>